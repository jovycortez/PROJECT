<Window x:Class="WpfApplication1.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        
        Title="Menu" Height="326" Width="509" BorderBrush="Black">
    <Grid Name="MenuGrid">
        <Image Source="/PROJECT;component/Images/Gradient-Background-53.jpg" Stretch="UniformToFill" Margin="1,0,-1,0">
            <Image.OpacityMask>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="Black" Offset="0" />
                    <GradientStop Color="White" Offset="1" />
                </LinearGradientBrush>
            </Image.OpacityMask>
        </Image>
        <Button Content="ADD" Height="23" HorizontalAlignment="Right" Margin="0,0,319,12" Name="btnAdd" Width="75" VerticalAlignment="Bottom" />
        <Button Content="SEARCH" Height="23" HorizontalAlignment="Right" VerticalAlignment="Bottom" Name="btnSearch" Width="75" Click="btnSearch_Click" Margin="0,0,12,12" />
        <Button Content="EXIT" Height="23" HorizontalAlignment="Right" Margin="0,0,400,12" Name="btnExit" VerticalAlignment="Bottom" Width="75" Click="exitbtn_Click" />
        
        
    </Grid>
</Window>
